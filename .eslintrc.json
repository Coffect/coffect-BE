{
  "parser": "@typescript-eslint/parser",
  "parserOptions": { "project": "./tsconfig.json", "sourceType": "module" },
  "plugins": ["prettier", "@typescript-eslint"],
  "ignorePatterns": ["dist/**/*", "node_modules/**/*", "generated/**/*"],
  "rules": {
    // Prettier 충돌 방지
    // "prettier/prettier": "warn",

    // 코드 품질
    "no-unused-vars": "error",
    "no-var": "error",
    "prefer-const": "error",
    "@typescript-eslint/no-floating-promises": "error",
    "@typescript-eslint/await-thenable": "error",

    // 스타일 (Google 권장), 사실 prettier에서 전부 잡을 수 있다.
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],

    // 네이밍 컨벤션 (Google 기준)
    "@typescript-eslint/naming-convention": [
      "error",
      {
        "selector": "default",
        "format": ["camelCase"]
      },
      {
        "selector": "variable",
        "format": ["camelCase", "UPPER_CASE"]
      },
      {
        "selector": "typeLike",
        "format": ["PascalCase"]
      },
      {
        "selector": "function",
        "format": ["camelCase"]
      }
    ],

    // ===, !== 권장
    "eqeqeq": ["error", "always"],

    // 삼항 연산자 줄바꿈
    "multiline-ternary": ["error", "always-multiline"],

    // 한 줄에 하나의 변수 선언 (var)
    "one-var": ["error", "never"],

    // eval 사용 금지
    "no-eval": "error",

    // with 사용 금지
    "no-with": "error",

    // Object.freeze 등 금지
    "no-restricted-syntax": [
      "error",
      {
        "selector": "CallExpression[callee.object.name='Object'][callee.property.name='freeze']",
        "message": "Do not use Object.freeze"
      },
      {
        "selector": "CallExpression[callee.object.name='Object'][callee.property.name='seal']",
        "message": "Do not use Object.seal"
      },
      {
        "selector": "CallExpression[callee.object.name='Object'][callee.property.name='preventExtensions']",
        "message": "Do not use Object.preventExtensions"
      }
    ],

    // require는 최상단에 위치
    "global-require": "error",

    // setter 사용 금지
    "accessor-pairs": ["error", { "setWithoutGet": true }]
  }
}
